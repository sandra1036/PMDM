<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.LIbroCompleto"
    android:orientation="vertical"
    android:background="@drawable/fondo">
    <CheckBox
        android:id="@+id/favoritos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favoritos"
        android:textColor="@color/white"
        android:buttonTint="@color/white"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/foto"
                android:layout_width="100dp"
                android:layout_height="100dp" />



    <TableRow>
    <TextView android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre: "
        android:textColor="@color/white"/>
    </TableRow>
    <TableRow>
    <TextView android:id="@+id/fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha:"
        android:textColor="@color/white"/>
    </TableRow>
    <TableRow>
    <TextView android:id="@+id/sinopis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sinopsis:"
        android:textColor="@color/white"/>
    </TableRow>
    <TableRow>
    <TextView android:id="@+id/autor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autor:"
        android:textColor="@color/white"/>
    </TableRow>
    <TableRow>
    <TextView android:id="@+id/genero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"/>
    </TableRow>
    <TableRow>
    <TextView android:id="@+id/precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"/>
    </TableRow>
    <TableRow>
    <RadioGroup android:id="@+id/radiogrup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

     <RadioButton android:id="@+id/Ebook"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Ebook"
         android:textColor="@color/white"
         android:buttonTint="@color/white"/>

     <RadioButton android:id="@+id/Fisico"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Fisico"
         android:textColor="@color/white"
         android:buttonTint="@color/white"/>

    </RadioGroup>
    </TableRow>
    </TableLayout>
    <Button android:id="@+id/siguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente"/>

</LinearLayout>